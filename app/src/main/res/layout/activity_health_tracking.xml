<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@android:color/white"
    tools:context="com.example.nguyenantin.zalohackathon.HealthTracking">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="#FB607D"
            android:layout_weight="4.5">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:layout_marginRight="20dp"
                android:id="@+id/btn_back4"
                android:background="@drawable/backarrow"
                android:layout_height="match_parent">
            </ImageButton>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="60dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:text="HEALTH TRACKING"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:id="@+id/list_image"
            android:background="@drawable/health"
            android:layout_height="match_parent">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_weight="2.5">
            <ListView
                android:id="@+id/list_healthy"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>