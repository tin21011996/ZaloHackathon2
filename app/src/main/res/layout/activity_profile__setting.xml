<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@android:color/white"
    tools:context="com.example.nguyenantin.zalohackathon.Profile_Setting">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="10"
        android:background="#F9FAFB"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5"
            android:background="#FB607D"
            android:layout_weight="3.5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="3.5"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:id="@+id/btn_back3"
                    android:orientation="vertical"
                    android:background="@drawable/backarrow"
                    android:layout_height="match_parent">
                </ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:textColor="@android:color/white"
                    android:text="PROFILE SETTING"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1.5"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/pro_setting"
                    android:layout_height="match_parent">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/list_image"
            android:background="#F9FAFB"
            android:weightSum="8"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="3"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Gender:"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="10"
                    android:textSize="12dp"
                    android:textColor="#7B7676"
                    android:layout_gravity="left"
                    android:background="@drawable/textview"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Gender:"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:textSize="12dp"
                        android:textColor="#7B7676"
                        android:layout_gravity="left"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Male"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:gravity="right"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:textSize="12dp"
                        android:textColor="#7B7676"
                        android:layout_gravity="left"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Gender:"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="10"
                    android:textSize="12dp"
                    android:textColor="#7B7676"
                    android:layout_gravity="left"
                    android:background="@drawable/textview"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Height:"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:textSize="12dp"
                        android:textColor="#7B7676"
                        android:layout_gravity="left"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="173 cm"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:gravity="right"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:textSize="12dp"
                        android:textColor="#7B7676"
                        android:layout_gravity="left"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Gender:"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="10"
                    android:textSize="12dp"
                    android:textColor="#7B7676"
                    android:layout_gravity="left"
                    android:background="@drawable/textview"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Weight :"
                        android:paddingTop="20dp"
                        android:paddingLeft="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:textSize="12dp"
                        android:textColor="#7B7676"
                        android:layout_gravity="left"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="70 kg"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:gravity="right"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:textSize="12dp"
                        android:textColor="#7B7676"
                        android:layout_gravity="left"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:color/white"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Automatic"
                        android:paddingLeft="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:textColor="#7B7676"
                        android:layout_gravity="left"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:checked="false"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="4"
                        android:buttonTint="#D8D8D8"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:color/white"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Manual"
                        android:paddingLeft="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:textColor="#7B7676"
                        android:layout_gravity="left"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:checked="true"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="4"
                        android:buttonTint="#F77062"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/white"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Special"
                        android:paddingLeft="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:textColor="#7B7676"
                        android:layout_gravity="left"
                        android:layout_weight="1"/>
                    <RadioButton
                        android:layout_width="match_parent"
                        android:checked="false"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="4"
                        android:buttonTint="#D8D8D8"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:weightSum="3"
                android:layout_marginBottom="3dp"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:color/white"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Automatic"
                        android:paddingLeft="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:textColor="#7B7676"
                        android:layout_gravity="left"
                        android:layout_weight="1"/>
                    <CheckBox
                        android:layout_width="match_parent"
                        android:checked="false"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="4"
                        android:buttonTint="#D8D8D8"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@android:color/white"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Manual"
                        android:paddingLeft="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:textColor="#7B7676"
                        android:layout_gravity="left"
                        android:layout_weight="1"/>
                    <CheckBox
                        android:layout_width="match_parent"
                        android:checked="true"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="4"
                        android:buttonTint="#F77062"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="5"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="@android:color/white"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Special"
                        android:paddingLeft="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:ems="10"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"
                        android:textColor="#7B7676"
                        android:layout_gravity="left"
                        android:layout_weight="1"/>
                    <CheckBox
                        android:layout_width="match_parent"
                        android:checked="false"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="4"
                        android:buttonTint="#D8D8D8"
                        android:layout_marginRight="10dp"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_weight="4.5">
            <Button
                android:id="@+id/btn_profile_setting"
                android:layout_weight="1"
                android:background="@drawable/header_calories"
                android:layout_width="match_parent"
                android:text="Save"
                android:layout_marginBottom="5dp"
                android:textColor="@android:color/white"
                android:layout_height="match_parent">
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>