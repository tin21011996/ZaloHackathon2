<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/todayconsumption"
    tools:context="com.example.nguyenantin.zalohackathon.Consumuption">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="6"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/list_image"
            android:weightSum="5"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="10"
                android:layout_weight="4"
                android:textColor="@android:color/white"
                android:text="TODAY CONSUMPTION">
                <ImageButton
                    android:layout_width="match_parent"
                    android:id="@+id/back_cons"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/backarrow"
                    android:layout_weight="4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:textColor="@android:color/white"
                    android:text="TODAY CONSUMPTION" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:weightSum="5"
                android:orientation="vertical"
                android:textColor="@android:color/white">
                <TextView
                    android:id="@+id/txtSum"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:textSize="35dp"
                    android:textAlignment="center"
                    android:layout_weight="3"
                    android:textColor="@android:color/white"
                    android:text="00.00"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:layout_weight="2"
                    android:textColor="@android:color/white"
                    android:text="Total Burned Calories"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="10"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_weight="4">
            <ListView
                android:id="@+id/lst_con"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
            <Button
                android:id="@+id/btn_Register"
                android:layout_width="match_parent"
                android:background="#FE5196"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="8"
                android:text="Do Excercie"
                android:textColor="@android:color/white"
                android:textSize="17dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>